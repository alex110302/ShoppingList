<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="20, 20">
            
            <Label Text="Login Info" 
                   FontSize="Large" 
                   FontAttributes="Bold"/>
            
            <Border Stroke="Gray" 
                    StrokeThickness="1" 
                    Margin="15, 15, 0 , 0">
                <Entry x:Name="txtUser" 
                       Placeholder="Enter 
                       Username:"/>
            </Border>
            <Border Stroke="Gray" 
                    StrokeThickness="1" 
                    Margin="15, 15, 0 , 0">
                <Entry x:Name="txtPassword" 
                       Placeholder="Enter 
                       Password:" IsPassword="True"/>
            </Border>
            
            <Button x:Name="btnLogin" 
                    Text="Login" 
                    Clicked="BtnLogin_OnClicked" 
                    Margin="0, 60"
                    BackgroundColor="Blue"
                    TextColor="White"
                    FontAttributes="Bold"/>
            <Button x:Name="btnCreateAccount" 
                    Text="Create Account" 
                    Clicked="BtnCreateAccount_OnClicked" 
                    BackgroundColor="Green" 
                    TextColor="White"
                    FontAttributes="Bold"/>
 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>